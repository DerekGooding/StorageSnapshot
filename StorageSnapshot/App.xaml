<Application
    x:Class="StorageSnapshot.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:converters="using:StorageSnapshot.Converters">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <XamlControlsResources xmlns="using:Microsoft.UI.Xaml.Controls" />
                <ResourceDictionary Source="/Styles/FontSizes.xaml" />
                <ResourceDictionary Source="/Styles/Thickness.xaml" />
                <ResourceDictionary Source="/Styles/TextBlock.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:NullableToBooleanConverter x:Key="NullableToBooleanConverter"/>
            <converters:NullableToVisibilityConverter x:Key="NullableToVisibilityConverter"/>
            <converters:NullableToInverseVisibilityConverter x:Key="NullableToInverseVisibilityConverter"/>
            
        </ResourceDictionary>
    </Application.Resources>
</Application>
